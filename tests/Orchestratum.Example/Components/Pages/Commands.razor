@page "/commands"
@rendermode InteractiveServer
@using System.Net.Http.Json
@using Orchestratum.Example.Models
@inject HttpClient Http

<PageTitle>Commands</PageTitle>

<h1>Command Queue</h1>

<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Statistics</h5>
                <button class="btn btn-sm btn-primary" @onclick="LoadData">
                    Refresh
                </button>
            </div>
            <div class="card-body">
                @if (stats != null)
                {
                    <div class="row">
                        <div class="col">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h3>@stats.Total</h3>
                                    <p class="text-muted">Total</p>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card text-center border-info">
                                <div class="card-body">
                                    <h3>@stats.Pending</h3>
                                    <p class="text-muted">Pending</p>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card text-center border-warning">
                                <div class="card-body">
                                    <h3>@stats.Running</h3>
                                    <p class="text-muted">Running</p>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card text-center border-success">
                                <div class="card-body">
                                    <h3>@stats.Completed</h3>
                                    <p class="text-muted">Completed</p>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card text-center border-danger">
                                <div class="card-body">
                                    <h3>@stats.Failed</h3>
                                    <p class="text-muted">Failed</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Recent Commands</h5>
            </div>
            <div class="card-body">
                @if (isLoading)
                {
                    <div class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else if (commands == null || !commands.Any())
                {
                    <p class="text-muted">No commands in queue</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Target</th>
                                    <th>Scheduled</th>
                                    <th>Status</th>
                                    <th>Retries</th>
                                    <th>Timeout</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cmd in commands)
                                {
                                    <tr>
                                        <td><code>@cmd.Id.ToString().Substring(0, 8)</code></td>
                                        <td><strong>@cmd.Name</strong></td>
                                        <td>@cmd.Target</td>
                                        <td>@cmd.ScheduledAt.ToLocalTime().ToString("HH:mm:ss")</td>
                                        <td>
                                            @if (cmd.IsCompleted)
                                            {
                                                <span class="badge bg-success">Completed</span>
                                            }
                                            else if (cmd.IsFailed)
                                            {
                                                <span class="badge bg-danger">Failed</span>
                                            }
                                            else if (cmd.IsCanceled)
                                            {
                                                <span class="badge bg-secondary">Canceled</span>
                                            }
                                            else if (cmd.IsRunning)
                                            {
                                                <span class="badge bg-warning">Running</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">Pending</span>
                                            }
                                        </td>
                                        <td>@cmd.RetriesLeft</td>
                                        <td>@cmd.Timeout.TotalSeconds s</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<CommandInfo>? commands;
    private CommandStats? stats;
    private bool isLoading;
    private System.Threading.Timer? timer;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        timer = new System.Threading.Timer(async _ => await InvokeAsync(LoadData), null, TimeSpan.FromSeconds(2), TimeSpan.FromSeconds(2));
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            commands = await Http.GetFromJsonAsync<List<CommandInfo>>("api/commands?limit=50");
            stats = await Http.GetFromJsonAsync<CommandStats>("api/commands/stats");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading commands: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
        StateHasChanged();
    }

    public void Dispose()
    {
        timer?.Dispose();
    }

    private class CommandStats
    {
        public int Total { get; set; }
        public int Pending { get; set; }
        public int Running { get; set; }
        public int Completed { get; set; }
        public int Failed { get; set; }
    }
}
