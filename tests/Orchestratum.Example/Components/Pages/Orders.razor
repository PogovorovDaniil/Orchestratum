@page "/orders"
@rendermode InteractiveServer
@using System.Net.Http.Json
@using Orchestratum.Example.Models
@using Orchestratum.Example.Controllers
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Orders</PageTitle>

<h1>Orders Management</h1>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Create New Order</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Customer Name</label>
                    <input type="text" class="form-control" @bind="customerName" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Customer Email</label>
                    <input type="email" class="form-control" @bind="customerEmail" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Product Name</label>
                    <input type="text" class="form-control" @bind="productName" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Quantity</label>
                    <input type="number" class="form-control" @bind="quantity" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input type="number" step="0.01" class="form-control" @bind="price" />
                </div>
                <button class="btn btn-success" @onclick="CreateOrder" disabled="@isCreating">
                    @if (isCreating)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    }
                    Create Order
                </button>
                @if (!string.IsNullOrEmpty(createMessage))
                {
                    <div class="alert alert-success mt-2">@createMessage</div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Orders List</h5>
                <button class="btn btn-sm btn-primary" @onclick="LoadOrders">
                    Refresh
                </button>
            </div>
            <div class="card-body">
                @if (isLoading)
                {
                    <div class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else if (orders == null || !orders.Any())
                {
                    <p class="text-muted">No orders yet. Create your first order!</p>
                }
                else
                {
                    <div style="max-height: 600px; overflow-y: auto;">
                        @foreach (var order in orders)
                        {
                            <div class="card mb-2">
                                <div class="card-body">
                                    <h6>Order @order.Id.Substring(0, 8)</h6>
                                    <p class="mb-1"><strong>Customer:</strong> @order.CustomerName (@order.CustomerEmail)</p>
                                    <p class="mb-1"><strong>Total:</strong> $@order.TotalAmount</p>
                                    <p class="mb-1">
                                        <strong>Status:</strong> 
                                        <span class="badge @GetStatusBadgeClass(order.Status)">@order.Status</span>
                                    </p>
                                    <p class="mb-0 text-muted small">@order.CreatedAt.ToLocalTime()</p>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<Order>? orders;
    private bool isLoading;
    private bool isCreating;
    private string createMessage = "";

    private string customerName = "John Doe";
    private string customerEmail = "john@example.com";
    private string productName = "Sample Product";
    private int quantity = 1;
    private decimal price = 99.99m;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrders();
    }

    private async Task LoadOrders()
    {
        isLoading = true;
        try
        {
            orders = await Http.GetFromJsonAsync<List<Order>>("api/orders");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading orders: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateOrder()
    {
        isCreating = true;
        createMessage = "";
        try
        {
            var request = new CreateOrderRequest
            {
                CustomerName = customerName,
                CustomerEmail = customerEmail,
                Items = new List<OrderItem>
                {
                    new OrderItem
                    {
                        ProductName = productName,
                        Quantity = quantity,
                        Price = price
                    }
                }
            };

            var response = await Http.PostAsJsonAsync("api/orders", request);
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<Dictionary<string, object>>();
                createMessage = $"Order created successfully! ID: {result?["id"]}";
                await LoadOrders();
            }
        }
        catch (Exception ex)
        {
            createMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isCreating = false;
        }
    }

    private string GetStatusBadgeClass(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "bg-secondary",
            OrderStatus.PaymentProcessing => "bg-info",
            OrderStatus.PaymentCompleted => "bg-success",
            OrderStatus.PaymentFailed => "bg-danger",
            OrderStatus.Processing => "bg-primary",
            OrderStatus.Shipped => "bg-success",
            OrderStatus.Delivered => "bg-success",
            OrderStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
