@page "/notifications"
@rendermode InteractiveServer
@using System.Net.Http.Json
@using Orchestratum.Example.Services
@inject HttpClient Http

<PageTitle>Notifications</PageTitle>

<h1>Email Notifications</h1>

<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Notification Log</h5>
                <button class="btn btn-sm btn-primary" @onclick="LoadNotifications">
                    Refresh
                </button>
            </div>
            <div class="card-body">
                @if (isLoading)
                {
                    <div class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else if (notifications == null || !notifications.Any())
                {
                    <p class="text-muted">No notifications sent yet</p>
                }
                else
                {
                    <div style="max-height: 700px; overflow-y: auto;">
                        @foreach (var notification in notifications)
                        {
                            <div class="card mb-2">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h6>ðŸ“§ @notification.Subject</h6>
                                        <span class="text-muted small">@notification.Timestamp.ToLocalTime().ToString("HH:mm:ss")</span>
                                    </div>
                                    <p class="mb-1"><strong>To:</strong> @notification.Email</p>
                                    <p class="mb-0">@notification.Message</p>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<NotificationLog>? notifications;
    private bool isLoading;
    private System.Threading.Timer? timer;

    protected override async Task OnInitializedAsync()
    {
        await LoadNotifications();
        timer = new System.Threading.Timer(async _ => await InvokeAsync(LoadNotifications), null, TimeSpan.FromSeconds(3), TimeSpan.FromSeconds(3));
    }

    private async Task LoadNotifications()
    {
        isLoading = true;
        try
        {
            notifications = await Http.GetFromJsonAsync<List<NotificationLog>>("api/notifications");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading notifications: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
        StateHasChanged();
    }

    public void Dispose()
    {
        timer?.Dispose();
    }
}
